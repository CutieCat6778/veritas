# GraphQL schema example
#
# https://gqlgen.com/getting-started/

scalar Time
scalar StringArray
scalar Language
scalar GormModel 

enum UserRole {
  ADMIN
  USER
  PREMIUM
}

enum Source {
  Tagesschau
  Sueddeutsche
  DieZeit 
  FAZ
  Welt
  TAZ
  Handelsblatt
}

type Article {
  id: ID!
  title: String!
  source: Source!
  publishedAt: Time!
  uri: String!
  views: Int!
  description: String!
  banner: String!
  linkedTo: [Article]
  category: StringArray
  language: Language!
  keywords: [KeyWords]
}

type KeyWords {
  keyword: String!
  lastUpdate: Time!
  articles: [Article]
}

type ResponseKeyWords {
  id: ID!
  keyword: String!
  lastUpdate: Time!
  articles: [Article]!
}

type Query {
  articles: [Article]!
  topArticles(amount: Int!): [Article]! 
  linkedArticles(id: ID!): [Article]!
  article(id: ID!): Article 
  recentArticle(amount: Int!): [Article]! 
  nextRecentArticle(start: Int!, stop: Int!): [Article]!
  batchFindArticles(ids: [ID]!): [Article]!
  keywords: [ResponseKeyWords]!
}
